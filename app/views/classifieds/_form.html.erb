        <div class="col-sm-9">
            <%= form_for(@classified, :html =>{class: "form-vertical"} ) do |f| %>  
                <% if @classified.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@classified.errors.count, "error") %> prohibited this classified from being saved:</h2>

                      <ul>
                      <% @classified.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                <div class="panel panel-default">
                    <div class="panel-heading">Choose category</div>
                    <div class="panel-body">


                        <div class="row">  
                            <div class="col-sm-12 "  >

                                <div class="form-group">

                                    <div class="row">
                                        <div class="col-sm-2" style="margin-top: 10px;">
                                            <label>Category</label>

                                        </div>
                                        <div class="col-sm-6">
                                           <% @vehicles = ["Cars","Motorcycles", "Boats","Other"]%>
                                           <% @real_estate = ["Home for Rent","Home for Sale","Other"]%>
                                          <% @services = ["Auto", "Food", "Computer Services"]%>
                                           <% @categories_array = [["vehicles", @vehicles], ["Real Estate", @real_estate], ["Services", @services]]%>
                                          
                                           <%= f.select :category,grouped_options_for_select(@categories_array), id: "category", class: "form-control"%>
                                            
                                        </div>

                                    </div>
                                </div>			
                            </div>			
                        </div>			
                    </div>			
                </div>


                <div class="panel panel-default">
                    <div class="panel-heading">Ad details</div>
                    <div class="panel-body">




                        <div class="form-group">
                            <div class="row">

                                <div class="col-sm-12">
                                    <label>Title </label>
                                    <%= f.text_field :title, :class => "form-control" %>
                                </div>
                                <div class="col-sm-12"><br />
                                    <label>Description </label>
                                  <%= f.text_area :description, :class => "form-control col-sm-8 expand", :rows => "6", :style => "width: 99%" %>
                    
                                </div>

                                <div class="col-sm-12"><br />
                                    <label>Keywords</label>
                                    <%= f.text_field :keyword, :class => "form-control"%>
                                </div>		

                            </div>

                        </div>




                    </div>			
                </div>			

                <div class="panel panel-default">
                    <div class="panel-heading">Ad information</div>
                    <div class="panel-body">

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6">
                                    <label>Address1</label>
                                    <%= f.text_field :address1, :class => "form-control"%>
                                </div>									     	
                                <div class="col-sm-6">
                                    <label>Address2</label>
                                    <%= f.text_field :address2, :class => "form-control"%>
                                </div>
                                <div class="col-sm-6"><br />
                                    <label>City</label>
                                    <%= f.text_field :city, :class => "form-control"%>
                                </div>
                                <div class="col-sm-6"><br />
                                    <label>Post Code</label>
                                    <%= f.text_field :zip, :class => "form-control"%>
                                </div>


                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="optionsRadios" id="optionsRadios2" value="option2">
                                            Don't show my address details publicly
                                        </label>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>

                </div>


                <div class="panel panel-default">
                    <div class="panel-heading">Add photos</div>
                    <div class="panel-body">
                        <div id="my-dropzone" action="upload.php" class="dropzone"></div>
                        <br /><p><small>* please note that the displayed images are cropped/resized only for display purposes</small></p>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">Your price</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6">
                                    <input type="text" class="form-control "  placeholder="How much do you want it to be listed for?">
                                </div>
                                <div class="col-sm-6">
                                    <p>You can adjust your price anytime you like, even after your listing is published.</p>
                                </div>
                            </div>
                        </div>

                    </div>




                </div>	

                <div class="panel panel-default">
                    <div class="panel-heading">Complete ad</div>
                    <div class="panel-body">

                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> I agree to the terms and conditions and regulations.
                            </label>
                        </div>

                        <br />
                        <button type="submit" class="btn btn-default hidden-xs">Save draft</button>
                        <button type="submit" class="btn btn-default hidden-xs">Preview ad</button>
                        <a href="account_credits.html" class="btn btn-primary pull-right"><i class="icon-ok"></i>  Publish ad</a>
                        <br /><p class=" hidden-xs" style="text-align: right"><small>* payment options will be<br /> shown on the next screen</small></p>
                    </div>
                    <% end %>



                </div>

